<!-- Loop over each object in the spots array -->
{{#each spots as |spot| }}
<div class="row mb-4 spot">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/spot/{{spot.id}}">{{spot.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount spot.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{project.user.name}} on {{format_date spot.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{spot.description}}
    </p>
  </div>
</div>
{{/each}}
